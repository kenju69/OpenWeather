<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.OpenWeather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.OpenWeather.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Ensure TabLayout works in both dark/light mode -->
        <item name="tabIndicatorColor">@color/teal_200</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="tabSelectedTextColor">@color/teal_200</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/teal_200</item>
        <item name="tabSelectedTextColor">@color/teal_200</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

</resources>
